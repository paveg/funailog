---
import '@/styles/tokens.css';

import { getEntry } from 'astro:content';

import type { Article, WebSite, WithContext } from 'schema-dts';

import CloudflareAnalytics from '@/components/analytics/CloudflareAnalytics.astro';
import Footer from '@/components/Footer.astro';
import Header from '@/components/Header.astro';
import { TailwindIndicator } from '@/components/tailwind-indicator';
import { ui, defaultLang } from '@/i18n/ui';

export type Props = {
  title: string;
  description: string;
  path: string;
  og: {
    enabled: boolean;
    image?: URL;
    width?: number;
    height?: number;
    type?: 'article' | 'website';
    publishedTime?: string;
    tags?: string[] | undefined;
  };
  lang?: string;
  noindex?: boolean;
  hreflangs: {
    path: string;
    hreflang: keyof typeof ui | 'x-default';
  }[];
  jsonLdSchema?: WithContext<Article> | WithContext<WebSite>;
};

const { title, description, path, og, lang, noindex, hreflangs, jsonLdSchema } =
  Astro.props;
const site = Astro.site ?? '';
const isProd = import.meta.env.PROD;
const meta = await getEntry('site', 'meta');
if (!meta) {
  throw new Error('Site meta configuration not found');
}
---

<html lang={lang ?? defaultLang}>
  <head>
    <meta charset="utf-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="canonical" href={new URL(path, site).toString()} />
    {noindex && <meta name="robots" content="noindex" />}
    <link
      rel="alternate"
      type="application/rss+xml"
      href={new URL('/rss.xml', site).toString()}
    />
    {
      hreflangs.map((hl) => (
        <link
          rel="alternate"
          hreflang={hl.hreflang}
          href={new URL(hl.path, site).toString()}
        />
      ))
    }
    <link rel="sitemap" href="/sitemap-index.xml" type="application/xml" />
    <link rel="icon" href="/favicon.ico" type="image/x-icon" sizes="48x48" />
    <meta
      name="theme-color"
      content="#ffffff"
      media="(prefers-color-scheme: light)"
    />
    <meta
      name="theme-color"
      content="#0a0a0a"
      media="(prefers-color-scheme: dark)"
    />
    <meta name="generator" content={Astro.generator} />
    <meta name="author" content="Ryota Ikezawa" />
    <link rel="author" href={site} />
    <meta name="creator" content="Ryota Ikezawa" />
    <meta name="publisher" content="Ryota Ikezawa" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={new URL(path, site).toString()} />
    <meta property="og:site_name" content={meta.data.rss.title} />
    <meta name="twitter:site" content="@paveg_" />
    <meta name="twitter:creator" content="@paveg_" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    {
      og.enabled && (
        <>
          <meta property="og:type" content={og.type ?? 'website'} />
          <meta
            property="og:image"
            content={og.image ?? new URL(meta.data.main.defaultImage)}
          />
          <meta property="og:image:width" content={`${og.width ?? 1200}`} />
          <meta property="og:image:height" content={`${og.height ?? 630}`} />
          <meta
            name="twitter:card"
            content={og.type === 'article' ? 'summary_large_image' : 'summary'}
          />
          <meta
            name="twitter:image"
            content={`${og.image ?? new URL(meta.data.main.defaultImage)}`}
          />
          {og.publishedTime && (
            <meta
              property="article:published_time"
              content={og.publishedTime}
            />
          )}
          {og.tags?.map((tag) => (
            <meta property="article:tag" content={tag} />
          ))}
        </>
      )
    }
    {isProd && <CloudflareAnalytics />}
    {
      jsonLdSchema && (
        <script
          is:inline
          type="application/ld+json"
          set:html={JSON.stringify(jsonLdSchema).replace(
            /<\/script>/gi,
            '<\\/script>',
          )}
        />
      )
    }
    <script is:inline>
      if (typeof window.localStorage.getItem('theme') === 'string') {
        const currentTheme = window.localStorage.getItem('theme');
        if (currentTheme === 'dark') {
          document.documentElement.classList.add('dark');
        }
      }
      if (
        typeof window.localStorage.getItem('theme') !== 'string' &&
        window.matchMedia('(prefers-color-scheme: dark)').matches
      ) {
        document.documentElement.classList.add('dark');
      }
    </script>
    <title>{title}</title>
  </head>
  <body class="bg-background text-foreground min-h-screen antialiased">
    <a
      href="#main-content"
      class="bg-background text-foreground focus-visible:ring-ring fixed top-2 left-2 z-[100] -translate-y-full rounded-md px-4 py-2 text-sm font-medium opacity-0 transition-transform focus-visible:translate-y-0 focus-visible:opacity-100 focus-visible:ring-2 focus-visible:outline-none"
    >
      コンテンツへスキップ
    </a>
    <Header />
    <div class="mx-auto max-w-4xl space-y-4 px-4 py-5">
      <main id="main-content" class="grow leading-7">
        <slot />
      </main>
      <Footer />
    </div>
    {import.meta.env.DEV && <TailwindIndicator />}
    <slot name="page-scripts" />
  </body>
</html>
