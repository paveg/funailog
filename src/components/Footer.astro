---
import { getEntry } from 'astro:content';

import {
  GitHubLogoIcon,
  InstagramLogoIcon,
  TwitterLogoIcon,
} from '@radix-ui/react-icons';
import { RssIcon } from 'lucide-react';

const meta = await getEntry('site', 'meta');
if (!meta) {
  throw new Error('Site meta configuration not found');
}
const today = new Date();
const currentYear = today.getFullYear();
const startYear = 2023;
---

<footer class="mt-auto">
  <!-- 装飾的な区切り線 - 和紙の繊維をイメージ -->
  <div class="relative py-8">
    <div class="absolute inset-x-0 top-1/2 flex items-center justify-center">
      <div
        class="h-px w-16 bg-gradient-to-r from-transparent via-border to-transparent"
      >
      </div>
      <div class="bg-border/60 mx-3 size-1 rotate-45"></div>
      <div
        class="h-px w-16 bg-gradient-to-l from-transparent via-border to-transparent"
      >
      </div>
    </div>
  </div>

  <div
    class="flex flex-col items-center gap-6 pb-8 pt-2 md:flex-row md:items-center md:justify-between"
  >
    <!-- コピーライトとリンク（モバイル: 下、デスクトップ: 左） -->
    <div
      class="order-2 flex flex-col items-center gap-2 text-center md:order-1 md:items-start md:text-left"
    >
      <a
        href="/privacy"
        class="relative text-xs text-muted-foreground transition-colors duration-200 after:absolute after:-bottom-0.5 after:left-0 after:h-px after:w-0 after:bg-current after:transition-all after:duration-300 hover:text-foreground hover:after:w-full"
      >
        Privacy Policy
      </a>
      <p class="text-muted-foreground/70 text-[11px] tracking-wide">
        &copy; {startYear}&ndash;{currentYear}
        {meta.data.author.name}
      </p>
    </div>

    <!-- ソーシャルアイコン（モバイル: 上、デスクトップ: 右） -->
    <nav
      aria-label="Social links"
      class="order-1 flex items-center gap-1 md:order-2"
    >
      <a
        href="/rss.xml"
        class="hover:bg-secondary/60 group relative flex size-10 items-center justify-center rounded-full transition-all duration-300"
        aria-label="RSSフィードを購読"
      >
        <RssIcon
          className="size-[18px] text-muted-foreground transition-colors duration-300 group-hover:text-foreground"
        />
      </a>
      <a
        href={meta.data.links.github}
        target="_blank"
        rel="noopener noreferrer"
        class="hover:bg-secondary/60 group relative flex size-10 items-center justify-center rounded-full transition-all duration-300"
        aria-label="GitHubプロフィール"
      >
        <GitHubLogoIcon
          className="size-[18px] text-muted-foreground transition-colors duration-300 group-hover:text-foreground"
        />
      </a>
      <a
        href={meta.data.links.twitter}
        target="_blank"
        rel="noopener noreferrer"
        class="hover:bg-secondary/60 group relative flex size-10 items-center justify-center rounded-full transition-all duration-300"
        aria-label="X (Twitter)"
      >
        <TwitterLogoIcon
          className="size-[18px] text-muted-foreground transition-colors duration-300 group-hover:text-foreground"
        />
      </a>
      <a
        href={meta.data.links.instagram}
        target="_blank"
        rel="noopener noreferrer"
        class="hover:bg-secondary/60 group relative flex size-10 items-center justify-center rounded-full transition-all duration-300"
        aria-label="Instagram"
      >
        <InstagramLogoIcon
          className="size-[18px] text-muted-foreground transition-colors duration-300 group-hover:text-foreground"
        />
      </a>
    </nav>
  </div>
</footer>
