---
import type { Page } from 'astro';
import type { CollectionEntry } from 'astro:content';

import type { UnifiedPost } from '@/types/unified-post';

import {
  Pagination,
  PaginationContent,
  PaginationPrevious,
  PaginationItem,
  PaginationNext,
} from '@/components/ui/pagination';
import { cn } from '@/lib/utils';

export type Props = {
  page: Page<CollectionEntry<'blog'>> | Page<UnifiedPost>;
};

const { page } = Astro.props;
---

<Pagination>
  <PaginationContent>
    <PaginationItem>
      <PaginationPrevious
        className={cn({ hidden: !page?.url.prev })}
        size="sm"
        isActive={!!page?.url.prev}
        href={page?.url?.prev}
      />
    </PaginationItem>
    <PaginationItem>
      <PaginationNext
        size="sm"
        className={cn({ hidden: !page?.url.next })}
        isActive={!!page?.url.next}
        href={page?.url?.next}
      />
    </PaginationItem>
  </PaginationContent>
</Pagination>
