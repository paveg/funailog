---
import type { Page } from 'astro';
import type { CollectionEntry } from 'astro:content';

import {
  Pagination,
  PaginationContent,
  PaginationPrevious,
  PaginationItem,
  PaginationNext,
} from '@/components/ui/pagination';

export type Props = {
  page: Page<CollectionEntry<'blog'>>;
};

const { page } = Astro.props;
---

<Pagination>
  <PaginationContent>
    <PaginationItem>
      <PaginationPrevious
        size="sm"
        disabled={!page?.url.prev}
        isActive={!!page?.url.prev}
        href={page?.url?.prev}
      />
    </PaginationItem>
    <PaginationItem>
      <PaginationNext
        size="sm"
        disabled={!page?.url.next}
        isActive={!!page?.url.next}
        href={page?.url?.next}
      />
    </PaginationItem>
  </PaginationContent>
</Pagination>
