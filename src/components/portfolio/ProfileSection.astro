---
import type { Profile } from '@/schemas/portfolio-collection';

import { Badge } from '@/components/ui/badge';

interface Props {
  profile: Profile;
}

const { profile } = Astro.props;
---

<section class="space-y-4">
  <div
    class="flex flex-col items-center gap-4 sm:flex-row sm:items-start sm:gap-5"
  >
    {
      profile.avatar && (
        <img
          src={profile.avatar}
          alt={profile.name}
          class="border-primary/20 size-20 shrink-0 rounded-full border-2 object-cover shadow-md sm:size-24"
        />
      )
    }
    <div class="flex-1 text-center sm:text-left">
      <h1 class="font-heading text-xl font-bold tracking-tight sm:text-2xl">
        {profile.name}
      </h1>
      {
        profile.nameKana && (
          <p class="text-muted-foreground/70 mt-0.5 text-xs sm:text-sm">
            {profile.nameKana}
          </p>
        )
      }
      <Badge variant="default" className="mt-2 text-xs sm:text-sm">
        {profile.title}
      </Badge>
    </div>
  </div>
  <p
    class="bg-muted/30 rounded-xl p-3 text-xs leading-relaxed text-muted-foreground sm:p-4 sm:text-sm"
  >
    {profile.summary}
  </p>
</section>
